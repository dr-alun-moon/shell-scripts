#!/bin/bash
function usage() { 
		 [[ $# -eq 3 ]] \
                 || echo -e "your command $*\n "\
		            "useage: $0 <tidydir> <srcdir> <objdir>" 
 }
 
function ensuredir() { 
		 test -d $1 || mkdir $1
}

function moveFiles() { 
		 for f in $2/*$1 
		 do mv $f $3
		 done
}

usage $*
test -d $1 || exit 1
ensuredir $2 && moveFiles .c $1 $2 || exit 1
ensuredir $3 && moveFiles .o $1 $3 || exit 1

